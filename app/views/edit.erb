    <li><label>Title</label><input id="title" type="text" name="article[title]" value="<%= @article.title %>" /></li>
    <li><label>Content</label><input id="content" type="text" name="article[content]"value="<%= @article.content %>"></li>
  </ul>
  <input type="submit" />
</form> 